head
    style 
        include estilos.css



div(class="jumbotron")
    h1 "Vista de Productos"
    <a class="btn btn-primary m-5" href="/public/" role="button">Ir a formulario</a>
    if hayProductos
        div(class="table-responsive")
            table(class="table table-dark")
                tr 
                    th Nombre 
                    th Precio 
                    th Foto
                each producto in productos
                    tr 
                        td=producto.title
                        td=producto.price
                        td 
                            img(width="50" src=producto.img alt="not found")
    else 
        h3 "No se encontraron productos"


